  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "dev"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "port": 9229,
      "console": "integratedTerminal"
    }
  ]
}